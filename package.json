  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.4.0",
    "cpx": "^1.5.0",
    "path": "^0.12.7",
    "update-notifier": "^2.5.0",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "eslint": "^5.16.0"
  }
}
