{
  "name": "wpdb",
  "version": "1.3.0",
  "description": "Tools for Handling WordPress Database by Docker and WP-CLI.",
  "main": "./index.js",
  "bin": {
    "wpdb": "./bin/wpdb"
  },
  "scripts": {
    "test": "ava --verbose",
    "check": "eslint .",
